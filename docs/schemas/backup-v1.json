{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://recordwell.app/schemas/backup-v1.json",
  "title": "RecordWell Backup File Format",
  "description": "Self-documenting JSON backup format for RecordWell medical records app. Supports optional Argon2id + AES-256-GCM encryption.",
  "type": "object",
  "required": ["formatName", "formatVersion", "generator", "encrypted", "checksum"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema URL for validation (informational)"
    },
    "formatName": {
      "type": "string",
      "const": "RecordWell Backup",
      "description": "Human-readable format identifier"
    },
    "formatVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Semantic version for compatibility checking (e.g., '1.0')"
    },
    "generator": {
      "type": "string",
      "description": "App name/version that created this backup (e.g., 'RecordWell/1.0.0 (iOS)')"
    },
    "encrypted": {
      "type": "boolean",
      "description": "Whether the payload is encrypted"
    },
    "checksum": {
      "$ref": "#/$defs/checksum"
    },
    "encryption": {
      "$ref": "#/$defs/encryption",
      "description": "Encryption parameters (present only if encrypted=true)"
    },
    "ciphertext": {
      "type": "string",
      "contentEncoding": "base64",
      "description": "Base64-encoded encrypted payload (present only if encrypted=true)"
    },
    "data": {
      "$ref": "#/$defs/backupPayload",
      "description": "Raw backup payload (present only if encrypted=false)"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "encrypted": { "const": true } }
      },
      "then": {
        "required": ["encryption", "ciphertext"],
        "properties": {
          "data": { "not": {} }
        }
      }
    },
    {
      "if": {
        "properties": { "encrypted": { "const": false } }
      },
      "then": {
        "required": ["data"],
        "properties": {
          "encryption": { "not": {} },
          "ciphertext": { "not": {} }
        }
      }
    }
  ],
  "$defs": {
    "checksum": {
      "type": "object",
      "description": "Integrity checksum for corruption detection before decryption",
      "required": ["algorithm", "value"],
      "properties": {
        "algorithm": {
          "type": "string",
          "const": "SHA-256",
          "description": "Hash algorithm used"
        },
        "value": {
          "type": "string",
          "contentEncoding": "base64",
          "description": "Base64-encoded hash. For encrypted: SHA-256 of raw ciphertext bytes (before base64). For unencrypted: SHA-256 of JSON-serialized data object (UTF-8 bytes)."
        }
      }
    },
    "encryption": {
      "type": "object",
      "description": "Encryption parameters following JWE-like structure with Argon2id KDF",
      "required": ["algorithm", "kdf", "nonce", "tag"],
      "properties": {
        "algorithm": {
          "type": "string",
          "const": "AES-256-GCM",
          "description": "Encryption algorithm"
        },
        "kdf": {
          "$ref": "#/$defs/kdf"
        },
        "nonce": {
          "type": "string",
          "contentEncoding": "base64",
          "description": "Base64-encoded 12-byte nonce/IV"
        },
        "tag": {
          "type": "string",
          "contentEncoding": "base64",
          "description": "Base64-encoded 16-byte authentication tag"
        }
      }
    },
    "kdf": {
      "type": "object",
      "description": "Argon2id key derivation function parameters",
      "required": ["algorithm", "version", "salt", "memory", "iterations", "parallelism", "keyLength"],
      "properties": {
        "algorithm": {
          "type": "string",
          "const": "Argon2id",
          "description": "KDF algorithm"
        },
        "version": {
          "type": "integer",
          "const": 19,
          "description": "Argon2id version (19 = 0x13)"
        },
        "salt": {
          "type": "string",
          "contentEncoding": "base64",
          "description": "Base64-encoded 16-byte random salt"
        },
        "memory": {
          "type": "integer",
          "minimum": 1048576,
          "description": "Memory cost in bytes (default: 67108864 = 64 MB)"
        },
        "iterations": {
          "type": "integer",
          "minimum": 1,
          "description": "Time cost / iterations (default: 3)"
        },
        "parallelism": {
          "type": "integer",
          "minimum": 1,
          "description": "Parallelism / lanes (default: 1)"
        },
        "keyLength": {
          "type": "integer",
          "const": 32,
          "description": "Output key length in bytes (32 for AES-256)"
        }
      }
    },
    "backupPayload": {
      "type": "object",
      "description": "Decrypted backup payload containing all user data",
      "required": ["exportedAt", "appVersion", "metadata", "persons", "records", "attachments", "schemas"],
      "properties": {
        "exportedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when backup was created"
        },
        "appVersion": {
          "type": "string",
          "description": "App version that created this backup"
        },
        "metadata": {
          "$ref": "#/$defs/metadata"
        },
        "persons": {
          "type": "array",
          "items": { "$ref": "#/$defs/person" },
          "description": "All family members"
        },
        "records": {
          "type": "array",
          "items": { "$ref": "#/$defs/medicalRecord" },
          "description": "All medical records"
        },
        "attachments": {
          "type": "array",
          "items": { "$ref": "#/$defs/attachment" },
          "description": "All attachments with file content"
        },
        "schemas": {
          "type": "array",
          "items": { "$ref": "#/$defs/schemaBackup" },
          "description": "All custom record schemas"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Summary counts (inside encrypted payload for privacy)",
      "required": ["personCount", "recordCount", "attachmentCount", "schemaCount"],
      "properties": {
        "personCount": { "type": "integer", "minimum": 0 },
        "recordCount": { "type": "integer", "minimum": 0 },
        "attachmentCount": { "type": "integer", "minimum": 0 },
        "schemaCount": { "type": "integer", "minimum": 0 }
      }
    },
    "person": {
      "type": "object",
      "description": "Family member data",
      "required": ["id", "name", "labels", "createdAt", "updatedAt"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier"
        },
        "name": {
          "type": "string",
          "description": "Person's name"
        },
        "dateOfBirth": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Date of birth (optional)"
        },
        "labels": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Labels/tags (e.g., 'child', 'spouse')"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "General notes about this person"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "medicalRecord": {
      "type": "object",
      "description": "Medical record with typed field values",
      "required": ["id", "personId", "fields", "createdAt", "updatedAt", "version"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "personId": {
          "type": "string",
          "format": "uuid",
          "description": "ID of the person this record belongs to"
        },
        "schemaId": {
          "type": ["string", "null"],
          "description": "ID of the record schema (e.g., 'vaccine', 'allergy', custom schema ID)"
        },
        "fields": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/fieldValue" },
          "description": "Map of field ID to typed value"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "integer",
          "minimum": 1,
          "description": "Version number for edit history"
        },
        "previousVersionId": {
          "type": ["string", "null"],
          "format": "uuid",
          "description": "ID of previous version (for edit tracking)"
        }
      }
    },
    "fieldValue": {
      "type": "object",
      "description": "Field value with explicit type for unambiguous parsing",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "int", "double", "bool", "date", "attachmentIds", "stringArray"],
          "description": "Value type"
        },
        "value": {
          "description": "The actual value (type depends on 'type' field)"
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "string" } } },
          "then": { "properties": { "value": { "type": "string" } } }
        },
        {
          "if": { "properties": { "type": { "const": "int" } } },
          "then": { "properties": { "value": { "type": "integer" } } }
        },
        {
          "if": { "properties": { "type": { "const": "double" } } },
          "then": { "properties": { "value": { "type": "number" } } }
        },
        {
          "if": { "properties": { "type": { "const": "bool" } } },
          "then": { "properties": { "value": { "type": "boolean" } } }
        },
        {
          "if": { "properties": { "type": { "const": "date" } } },
          "then": { "properties": { "value": { "type": "string", "format": "date" } } }
        },
        {
          "if": { "properties": { "type": { "const": "attachmentIds" } } },
          "then": { "properties": { "value": { "type": "array", "items": { "type": "string", "format": "uuid" } } } }
        },
        {
          "if": { "properties": { "type": { "const": "stringArray" } } },
          "then": { "properties": { "value": { "type": "array", "items": { "type": "string" } } } }
        }
      ]
    },
    "attachment": {
      "type": "object",
      "description": "File attachment with embedded content",
      "required": ["id", "personId", "linkedRecordIds", "fileName", "mimeType", "content", "uploadedAt"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "personId": {
          "type": "string",
          "format": "uuid"
        },
        "linkedRecordIds": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "Records this attachment is linked to"
        },
        "fileName": {
          "type": "string",
          "description": "Original filename (e.g., 'vaccine-card.jpg')"
        },
        "mimeType": {
          "type": "string",
          "description": "MIME type (e.g., 'image/jpeg', 'application/pdf')"
        },
        "content": {
          "type": "string",
          "contentEncoding": "base64",
          "description": "Base64-encoded file bytes"
        },
        "thumbnail": {
          "type": ["string", "null"],
          "contentEncoding": "base64",
          "description": "Base64-encoded thumbnail (for images)"
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "schemaBackup": {
      "type": "object",
      "description": "Custom record schema for a specific person",
      "required": ["personId", "schema"],
      "properties": {
        "personId": {
          "type": "string",
          "format": "uuid",
          "description": "Person this schema belongs to"
        },
        "schema": {
          "$ref": "#/$defs/recordSchema"
        }
      }
    },
    "recordSchema": {
      "type": "object",
      "description": "Definition of a custom record type",
      "required": ["id", "displayName", "iconSystemName", "fields"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique schema identifier"
        },
        "displayName": {
          "type": "string",
          "description": "Human-readable name"
        },
        "iconSystemName": {
          "type": "string",
          "description": "SF Symbol name for the icon"
        },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/$defs/fieldDefinition" },
          "description": "Field definitions for this record type"
        }
      }
    },
    "fieldDefinition": {
      "type": "object",
      "description": "Definition of a field in a record schema",
      "required": ["id", "label", "type", "isRequired"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique field identifier"
        },
        "label": {
          "type": "string",
          "description": "Display label"
        },
        "type": {
          "type": "string",
          "enum": ["string", "int", "double", "bool", "date", "attachmentIds", "stringArray"],
          "description": "Field type"
        },
        "isRequired": {
          "type": "boolean"
        },
        "placeholder": {
          "type": ["string", "null"],
          "description": "Placeholder text for input"
        }
      }
    }
  }
}
